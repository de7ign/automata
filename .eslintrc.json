{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": ["airbnb", "prettier"],
    "rules": {
        "indent": [2, 2, {"SwitchCase": 1}],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src/**/*"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}